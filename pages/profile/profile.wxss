.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 0.3px #cbcbcb solid;
  padding-bottom: 20rpx;

}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  padding-top: 30rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.line{
  width: 100%;
  height: 0.3px;
  background-color: #cbcbcb;
}
.fun-btns{
  display: flex;
  flex-direction: row;
  padding:25rpx;
  border-bottom: 0.3px #cbcbcb solid;
  justify-content: space-between;
  color: #707070;
}
.center{
  flex: 1;
}
#login-btn{
  width:auto;
  margin-top: 20rpx;
  background-color: #e1c686;
  color: white;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
#next{
  width: 12px;
  height: 12px;
}

