.app-card {
  width:70%;
  height:70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 10rpx;
  background-color: rgb(248, 248, 248);
}
.app-card:hover {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}
.card-container{
  width: 100%;
  height: 100vh;
  background-color: rgb(241, 241, 241);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.image-container{
  width: 150px;
  height: 150px;
}
.word{
  font-size: 20px;
}

.ok{
  font-size: 60rpx;
  line-height: 90rpx;
  text-align: center;
  align-content: center;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 2px;
  left: 0px;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 40px;
  border: 2rpx solid #55bbdd;
  align-items: center;
  background-color: white;
  
}
